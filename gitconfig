# This is Git's per-user configuration file.
[user]
	name = 山浦功
	email = ko.foot1103@gmail.com

[alias]
    st = status
    ci = commit
    co = checkout
    ph = push origin HEAD
[init]
    defaultBranch = main
[core]
    editor = nvim
    pager = delta
[interactive]
    diffFilter = delta --color-only --features=decorations
[commit]
    template =  ~/.gitmessage.txt

[delta]
    side-by-side = true
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
    line-numbers= true
